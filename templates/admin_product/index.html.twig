{% extends 'base.html.twig' %}
{% import "macro/form.html.twig" as forms %}

{% block title %}
	Card Items
{% endblock %}

{% block body %}
	<table class="table">
		<thead>
			<tr>
				<th scope="col">
					#
				</th>
				<th scope="col">
					Name
				</th>
				<th scope="col">
					Price
				</th>
				<th scope="col">
					Count
				</th>
				<th scope="col">
					Remove
				</th>
				<th scope="col">
					Details
				</th>
			</tr>
		</thead>
		<tbody>
			{% for p in pagination %}
				<tr>
					<th scope="row">
						{{ loop.index }}
					</th>
					<td>
						{{ p.name }}
					</td>
					<td>
						{{ p.price }}
					</td>
					<td>
						{{ p.count }}
					</td>
					<td>
						<form action="{{ path('admin_delete_product', {id: p.id}) }}" method="post" class="form-row ">
							{{ forms.csrf_input('admin-delete-product') }}

								<button type="submit" class="btn btn-danger">
									Remove
								</button>
							</div>
						</form>
					</td>	
                    <td>
						<a href="{{ path('admin_product',{id: p.id})}}">
                            Details
                        </a>
					</td>
					
				</tr>

			{% endfor %}
		</tbody>
	</table>

	<div class="navigation center">
		{{ knp_pagination_render(pagination) }}
	</div>

{% endblock %}
